[supervisord]
nodaemon=true

[program:authdaemon]
command 	    = /usr/local/bin/run-service.sh courier-authdaemon
startsecs 	    = 5
autorestart 	= true

[program:saslauthd]
command 	    = /usr/local/bin/run-service.sh saslauthd
startsecs 	    = 5
autorestart 	= true

[program:postfix]
process_name 	= master
command 	    = /usr/local/bin/run-service.sh postfix
directory	    = /etc/postfix
startsecs 	    = 5
autorestart 	= true

[program:pop]
command 	    = /usr/local/bin/run-service.sh courier-pop
startsecs 	    = 5
autorestart 	= true

[program:pop_ssl]
command 	    = /usr/local/bin/run-service.sh courier-pop-ssl
startsecs 	    = 5
autorestart 	= true

[program:imap]
command 	    = /usr/local/bin/run-service.sh courier-imap
startsecs 	    = 5
autorestart 	= true

[program:imap_ssl]
command 	    = /usr/local/bin/run-service.sh courier-imap-ssl
startsecs 	    = 5
autorestart 	= true

